{

  "manifest_version": 2,
  "name": "Restriction Breaker",
  "version": "0.1",

  "description": "A tool for unblocking TVer.jp and abema.tv geolocation restriction.",

  "permissions": [
      "activeTab",
      "webRequest",
      "webRequestBlocking",
      "*://*.api.brightcove.com/*",
      "*://linear-abematv.akamaized.net/*",
      "*://abematv.akamaized.net/*"
  ],
  "background": {
    "scripts": ["background.js"]

  }

}
