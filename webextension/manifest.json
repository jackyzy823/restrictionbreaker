{

  "manifest_version": 2,
  "name": "Restriction Breaker",
  "version": "0.1",

  "description": "A tool for unblocking TVer.jp and abema.tv geolocation restriction.",

  "permissions": [
      "activeTab",
      "webRequest",
      "webRequestBlocking",
      "cookies",
      "*://*.api.brightcove.com/*",
      "*://*.stream.ne.jp/*",
      "*://*.fod.fujitv.co.jp/*",
      "*://linear-abematv.akamaized.net/*",
      "*://abematv.akamaized.net/*",
      "*://www.tv-asahi.co.jp/*",
      "*://*.dmm.co.jp/*"
  ],
  "background": {
    "scripts": ["background.js"]

  }

}
